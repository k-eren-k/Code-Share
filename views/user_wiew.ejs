    <script>
        
        document.addEventListener("DOMContentLoaded", function() {
            const loggedIn = true; // Kullanıcının oturum açmış olup olmadığını kontrol edin
            const deleteIcons = document.querySelectorAll('.delete-icon');

            deleteIcons.forEach(icon => {
                icon.style.display = loggedIn ? 'inline' : 'none';

                icon.addEventListener('click', async function() {
                    const codeId = icon.getAttribute('data-code-id');
                    
                    try {
                        // Kod silme işlemi burada gerçekleştirilebilir
                        const response = await fetch(`/delete-code/${codeId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
                        
                        if (response.ok) {
                            // Kod başarıyla silindiğinde yapılacak işlemler
                            icon.parentElement.remove(); // Listeden silinen kodu kaldır
                        }
                    } catch (error) {
                        console.error('Kod silme hatası:', error);
                    }
                });
            });
        });
    </script>
